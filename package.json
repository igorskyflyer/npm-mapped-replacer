{
	"name": "mapped-replacer",
	"version": "1.1.0",
	"description": "🗺 Zero-dependency Map and RegExp based string replacer with Unicode support. 🍁",
	"engines": {
		"node": ">=12.17"
	},
	"sideEffects": false,
	"main": "./src/index",
	"exports": {
		".": {
			"require": "./src/index.js",
			"import": "./src/index.mjs"
		}
	},
	"module": "./src/index.mjs",
	"types": "./dist/index",
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"test": "mocha --slow 0",
		"pub": "npm test && tsc && npm publish"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/igorskyflyer/npm-mapped-replacer.git"
	},
	"keywords": [
		"replace",
		"map",
		"unicode",
		"regexp",
		"string"
	],
	"author": "Igor Dimitrijević",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/igorskyflyer/npm-mapped-replacer/issues"
	},
	"homepage": "https://github.com/igorskyflyer/npm-mapped-replacer#readme",
	"devDependencies": {
		"@types/chai": "^4.2.21",
		"@types/mocha": "^9.0.0",
		"chai": "^4.3.4",
		"mocha": "^9.0.3"
	}
}
