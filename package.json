{
	"name": "mapped-replacer",
	"version": "1.2.2",
	"description": "🗺 Zero-dependency Map and RegExp based string replacer with Unicode support. 🍁",
	"type": "module",
	"engines": {
		"node": ">=12.17"
	},
	"sideEffects": false,
	"main": "./dist/compat/index.js",
	"exports": {
		".": {
			"require": "./dist/compat/index.js",
			"import": "./dist/module/index.js"
		}
	},
	"module": "./dist/module/index.js",
	"types": "./dist/types",
	"files": [
		"dist"
	],
	"scripts": {
		"cjs": "tsc -m CommonJS --outDir ./dist/compat && hybridize --out ./dist/compat --module cjs --overwrite",
		"esm": "tsc -m ES6 --outDir ./dist/module",
		"dts": "tsc --d --emitDeclarationOnly --declarationDir ./dist/types",
		"build": "npm run cjs && npm run esm && npm run dts",
		"test": "mocha",
		"pub": "npm test && npm run build && npm publish"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/igorskyflyer/npm-mapped-replacer.git"
	},
	"keywords": [
		"replace",
		"map",
		"unicode",
		"regexp",
		"string"
	],
	"author": "Igor Dimitrijević",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/igorskyflyer/npm-mapped-replacer/issues"
	},
	"homepage": "https://github.com/igorskyflyer/npm-mapped-replacer#readme",
	"devDependencies": {
		"@igor.dvlpr/hybridize": "^1.0.0",
		"@types/chai": "^4.3.3",
		"@types/mocha": "^9.1.1",
		"chai": "^4.3.6",
		"mocha": "^10.0.0",
		"typescript": "^4.7.4"
	}
}
